@model Document.Mgr.Model.UserInfo

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <link rel="Bookmark" href="/favicon.ico">
    <link rel="Shortcut Icon" href="/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="/Content/H-ui.admin_v2.5/static/h-ui/css/H-ui.min.css" />
    <link rel="stylesheet" type="text/css" href="/Content/H-ui.admin_v2.5/static/h-ui.admin/css/H-ui.admin.css" />
    <link rel="stylesheet" type="text/css" href="/Content/H-ui.admin_v2.5/lib/Hui-iconfont/1.0.7/iconfont.css" />
    <link rel="stylesheet" type="text/css" href="/Content/H-ui.admin_v2.5/lib/icheck/icheck.css" />
    <link rel="stylesheet" type="text/css" href="/Content/H-ui.admin_v2.5/static/h-ui.admin/skin/default/skin.css" id="skin" />
    <link rel="stylesheet" type="text/css" href="/Content/H-ui.admin_v2.5/static/h-ui.admin/css/style.css" />
    <title>编辑用户</title>
</head>
<body>
    <article class="page-container">
        <form action="" method="post" class="form form-horizontal" id="form-member-add">
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>姓名：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input type="text" class="input-text" value="@Model.Name" placeholder="" id="username" name="Name">
                </div>
            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>性别：</label>
                <div class="formControls col-xs-8 col-sm-9 skin-minimal">
                    @{
                        if (@Model.Gender == 1) 
                        {
                            <div class="radio-box">
                                <input name="Gender" type="radio" id="sex-1" checked>
                                <label for="sex-1">男</label>
                            </div>
                            <div class="radio-box">
                                <input type="radio" id="sex-2" name="Gender">
                                <label for="sex-2">女</label>
                            </div>                        
                        }
                        else
                        {
                            <div class="radio-box">
                                <input name="Gender" type="radio" id="sex-1" >
                                <label for="sex-1">男</label>
                            </div>
                            <div class="radio-box">
                                <input type="radio" id="sex-2" name="Gender" checked>
                                <label for="sex-2">女</label>
                            </div>                             
                        }
                    }
                </div>
            </div>

            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>邮箱：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input type="text" class="input-text" placeholder="请输入登录邮箱..." name="Email" id="email" value="@Model.Email">
                </div>
            </div>

            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>入职时间：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <input type="text" onfocus="WdatePicker({ maxDate: '#F{$dp.$D(\'hiredTime\')||\'%y-%M-%d\'}' })" id="hiredTime" name="HiredTime"  value="@Model.HiredTime"  class="input-text Wdate" style="width:120px;">
                </div>

            </div>
            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>职位：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <span class="select-box">
                        @Html.DropDownListFor(m => m.PositionId, ViewData["positions"] as SelectList, "----请选择员工职位----", new { @class = "select" })
                    </span>
                </div>
            </div>

            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>角色：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <span class="select-box">
                        @Html.DropDownListFor(m => m.RoleId, ViewData["roles"] as SelectList, "----请选择员工角色----", new { @class = "select" })
                    </span>
                </div>
            </div>

            <div class="row cl">
                <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>Office：</label>
                <div class="formControls col-xs-8 col-sm-9">
                    <span class="select-box">
                        @Html.DropDownList("country", ViewData["countries"] as SelectList, "----请选择国家----", new { @class = "select" })
                    </span>

                    <span class="select-box">
                        @Html.DropDownList("city", ViewData["cities"] as SelectList, "----请选择城市----", new { @class = "select" })
                    </span>

                    <span class="select-box">
                        @Html.DropDownListFor(m => m.GroupId, ViewData["groups"] as SelectList, "----请选择Team----", new { @class = "select" })
                    </span>
                </div>
            </div>

            <div class="row cl">
                <div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-3">
                    <input class="btn btn-primary radius" type="submit" value="&nbsp;&nbsp;修改&nbsp;&nbsp;">
                </div>
            </div>
        </form>
    </article>
    <!--_footer 作为公共模版分离出去-->
    <script type="text/javascript" src="/Content/H-ui.admin_v2.5/lib/jquery/1.9.1/jquery.min.js"></script>
    <script type="text/javascript" src="/Content/H-ui.admin_v2.5/lib/layer/2.1/layer.js"></script>
    <script type="text/javascript" src="/Content/H-ui.admin_v2.5/lib/My97DatePicker/WdatePicker.js"></script>
    <script type="text/javascript" src="/Content/H-ui.admin_v2.5/lib/icheck/jquery.icheck.min.js"></script>
    <script type="text/javascript" src="/Content/H-ui.admin_v2.5/lib/jquery.validation/1.14.0/jquery.validate.min.js"></script>
    <script type="text/javascript" src="/Content/H-ui.admin_v2.5/lib/jquery.validation/1.14.0/validate-methods.js"></script>
    <script type="text/javascript" src="/Content/H-ui.admin_v2.5/lib/jquery.validation/1.14.0/messages_zh.min.js"></script>
    <script type="text/javascript" src="/Content/H-ui.admin_v2.5/static/h-ui/js/H-ui.js"></script>
    <script type="text/javascript" src="/Content/H-ui.admin_v2.5/static/h-ui.admin/js/H-ui.admin.js"></script>
    <script src="~/Scripts/jquery-form.js"></script>
    <!--/_footer /作为公共模版分离出去-->
    <!--请在下方写此页面业务相关的脚本-->
    <script type="text/javascript">
        $(function () {
            $('.skin-minimal input').iCheck({
                checkboxClass: 'icheckbox-blue',
                radioClass: 'iradio-blue',
                increaseArea: '20%'
            });

            //三级联动...
            $("#country").change(function () {
                var selectValue = $(this).val();
                //删除已有的数据
                $("#city option:gt(0)").remove();
                var url = "/Home/GetCityData";
                $.getJSON(url, { id: selectValue }, function (data) {
                    if (data) {
                        for (var i = 0; i < data.length; i++) {
                            var option = "<option value='" + data[i].Id + "'>" + data[i].Name + "</option>";
                            if (i == 0) {
                                option = "<option value='" + data[i].Id + "' selected >" + data[i].Name + "</option>";;
                            }
                            $("#city").append(option);
                        }
                    }
                });
                cityChange();
            });

            function cityChange() {
                var selectValue = $("#city").val();
                //删除已有的数据
                $("#Group_Id option:gt(0)").remove();
                var url = "/Home/GetTeamData";
                $.getJSON(url, { id: selectValue }, function (data) {
                    if (data) {
                        for (var i = 0; i < data.length; i++) {
                            var option = "<option value='" + data[i].Id + "'>" + data[i].Name + "</option>";
                            if (i == 0) {
                                option = "<option value='" + data[i].Id + "' selected >" + data[i].Name + "</option>";;
                            }

                            $("#Group_Id").append(option);
                        }
                    }
                });
            }

            //三级联动...
            $("#city").change(function () {
                cityChange();
            });

            function close() {
                var index = parent.layer.getFrameIndex(window.name);
                parent.refresh();
                parent.layer.close(index);
            };

            $("#form-member-add").validate({
                rules: {
                    Name: {
                        required: true,
                        minlength: 2,
                        maxlength: 16
                    },
                    Gender: {
                        required: true,
                    },
                    Email: {
                        required: true,
                        email: true,
                    },
                    HiredTime: {
                        required: true,
                    },
                    Position: {
                        required: true,
                    },
                    Role: {
                        required: true,
                    },
                    team: {
                        required: true,
                    },
                },
                onkeyup: false,
                focusCleanup: true,
                success: "valid",
                submitHandler: function (form) {
                    $(form).ajaxSubmit(function (message) {
                        if (message == "ok") {
                            layer.msg(message, { icon: 5, time: 1000 });
                            setTimeout(close, 1200);
                        } else {
                            layer.msg(message, { icon: 2, time: 1000 });
                        }
                    });
                }
            });
        }
        );
    </script>
    <!--/请在上方写此页面业务相关的脚本-->
</body>
</html>
