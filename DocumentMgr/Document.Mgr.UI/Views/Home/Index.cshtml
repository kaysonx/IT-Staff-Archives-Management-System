    <script src="~/Scripts/jquery-form.js"></script>
    <script type="text/javascript">
        $(function () {
            $(".Hui-tabNav-wp").contextMenu('myMenu1', {
                bindings: {
                    'open': function (t) {
                        alert('Trigger was ' + t.id + '\nAction was Open');
                    },
                    'email': function (t) {
                        alert('Trigger was ' + t.id + '\nAction was Email');
                    },
                    'save': function (t) {
                        alert('Trigger was ' + t.id + '\nAction was Save');
                    },
                    'delete': function (t) {
                        alert('Trigger was ' + t.id + '\nAction was Delete')
                    }
                }
            });
        });

        $(function () {
            $("#changeCount").click(function () {
                layer.confirm('您确定要退出？', {
                    btn: ['确定', '取消'] //按钮
                }, function () {
                    $.get("/Home/Logout", {}, function (data) {
                        window.parent.location.href = "/Login/Index";
                    });
                });
            });
            $("#logout").click(function () {
                layer.confirm('您确定要退出？', {
                    btn: ['确定', '取消'] //按钮
                }, function () {
                    $.get("/Home/Logout", {}, function (data) {
                        window.parent.location.href = "/Login/Index";
                    });
                });
            });
        });

        function createIndex(type) {
            if (type == 'contact') {
                $.get("/Contact/CreateIndex", {}, function (data) {
                    if (data == 'ok') {
                        layer.msg('索引创建成功！', { icon: 1, time: 1000 });
                    } else {
                        layer.msg("索引创建失败，请稍后再试！", { icon: 2, time: 1000 });
                    }
                });
            } else if (type == 'search') {
                $.get("/Search/CreateUserInfoIndex", {}, function (data) {
                    if (data == 'ok') {
                        layer.msg('索引创建成功！', { icon: 1, time: 1000 });
                    } else {
                        layer.msg("索引创建失败，请稍后再试！", { icon: 2, time: 1000 });
                    }
                });
            }
        }
        /*角色-添加*/
        function role_add(title, url, w, h) {

            layer_show(title, url, w, h);
        }

        function refresh() {
            location.replace(location.href);
        }

        /*职位-添加*/
        function position_add(title, url, w, h) {
            layer_show(title, url, w, h);
        }
        /*用户-添加*/
        function member_add(title, url, w, h) {
            var index = layer.open({
                type: 2,
                title: title,
                content: url
            });
            layer.full(index);
        }
    </script>
</body>
