    <script type="text/javascript">
        $(function () {

            $('.table-sort tbody').on('click', 'tr', function () {
                if ($(this).hasClass('selected')) {
                    $(this).removeClass('selected');
                }
                else {
                    $('tr.selected').removeClass('selected');
                    $(this).addClass('selected');
                }
            });
        });

        //以下将以jquery.ajax为例，演示一个异步分页
        function pager(curr) {
            $.getJSON('/UserInfo/DeletedUser', {
                page: curr || 1 //向服务端传的参数，此处只是演示
            }, function (res) {
                //处理数据
                if (res) {
                    $("#tableontent").html("");
                    var rows = res.rows;
                    var strHtml = '  <table class="table table-border table-bordered table-hover table-bg table-sort">                <thead>                    <tr class="text-c">                        <th width="25"><input type="checkbox" name="" value=""></th>                        <th width="80">UID</th>                        <th width="100">姓名</th>                        <th width="40">性别</th>                        <th width="150">邮箱</th>                        <th width="130">入职时间</th>                        <th width="70">角色</th>                        <th width="70">职位</th>                        <th width="70">所属Team</th>                        <th width="50">状态</th>                        <th width="100">操作</th>                    </tr>                </thead>                <tbody id="content">                ';
                    for (var i = 0; i < res.rows.length; i++) {
                        var ckName = 'ckb_' + rows[i].Id;
                        var strTr = '<tr class="text-c">';
                        strTr += '<td><input type="checkbox" value="' + rows[i].Id + '" name="' + ckName + '"></td>';
                        strTr += '<td>' + rows[i].UID + '</td>';
                        strTr += '<td>' + rows[i].Name + '</td>';

                        if (rows[i].Gender == "1") {
                            strTr += '<td>男</td>';
                        } else {
                            strTr += '<td>女</td>';
                        }

                        strTr += '<td>' + rows[i].Email + '</td>';
                        //格式化时间
                        var hiredTime = (eval(rows[i].HiredTime.replace(/\/Date\((\d+)\)\//gi, "new Date($1)"))).pattern("yyyy-M-d");

                        strTr += '<td>' + hiredTime + '</td>';
                        strTr += '<td>' + rows[i].roleName + '</td>';
                        strTr += '<td>' + rows[i].positionName + '</td>';
                        strTr += '<td>' + rows[i].groupName + '</td>';
                        var strStatus = '<td class="td-status"><span class="label label-success radius">已启用</span></td>';
                        if (rows[i].IsEnabled == false) {
                            strStatus = '<td class="td-status"><span class="label label-info radius">未启用</span></td>';
                        }
                        strTr += strStatus;

                        strTr += ' <td class="td-manage"><a style="text-decoration:none" onclick="member_reverse(this,\'' + rows[i].Id + '\')" href="javascript:;" title="还原"><i class="Hui-iconfont">&#xe631;</i></a> </td>';

                        strTr += ' </tr>';

                        strHtml += strTr;
                    }

                    strHtml += "</tbody>            </table>";
                    $("#tableContent").html(strHtml);

                }
                // document.getElementById('content').innerHTML = res.rows;
                //显示分页
                laypage({
                    cont: 'pager', //容器。值支持id名、原生dom对象，jquery对象。【如该容器为】：<div id="page1"></div>
                    pages: res.total, //通过后台拿到的总页数
                    curr: curr || 1, //当前页
                    // skin: 'molv', //皮肤
                    skip: true, //是否开启跳页
                    jump: function (obj, first) { //触发分页后的回调
                        if (!first) { //点击跳页触发函数自身，并传递当前页：obj.curr
                            pager(obj.curr);
                        }
                    }
                });
            });
        };
        //运行
        pager();




        /*用户-还原*/
        function member_reverse(obj, id) {
            layer.confirm('确认要还原吗？', function (index) {
                var url = '/UserInfo/Reverse/';
                $.post(url, { uid: id }, function (data) {
                    if (data == "ok") {
                        $(obj).parents("tr").remove();
                        layer.msg('已还原!', { icon: 1, time: 1000 });
                    } else {
                        layer.msg(data, { icon: 2, time: 1000 });
                    }
                });
            });
        }
    </script>
